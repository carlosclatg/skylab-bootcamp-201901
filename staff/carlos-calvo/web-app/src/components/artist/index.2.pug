extends ../home/index

block artist   
 section.search.container
   h2 Artist List
   if artists
    div.row
     each artist in artists
       div.card-body.col-3.justify-content-center
        div.row
         h5.col-7.justify-content-center.card-title=artist.name
         img(src=`${artist.images[0].url}` width='80%' height='auto%').justify-content-center.col-7
         a.col-12.justify-content-center.btn.btn-primary(href=`/artist/${artist.id}`)=artist.name
   block album
