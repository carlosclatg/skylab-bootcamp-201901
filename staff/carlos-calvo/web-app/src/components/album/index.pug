extends ../artist/index

block album     
  section.search.container
    div.containerh2
     h2.badge-dark Album List
    if albums
     div.row.container-fluid.m-2
      each album in albums
       div.card.col-md-4.col-lg-3.col-sm-6.col-xl-2.pt-2.cardclass
        img.card-img-top(src=`${album.images[0] ? album.images[0].url : 'https://images-na.ssl-images-amazon.com/images/I/51rttY7a%2B9L.png'}`, alt='Group image', width='80%' height='auto')
        div.footerfromcard
          h6.justify-content-center.flex-nowrap= album.name
          a.justify-content-center.btn.btn-primary(href=`/album/${album.id}`) Select
  block tracks    